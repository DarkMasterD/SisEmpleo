@model SisEmpleo.Models.Dashboard

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Workeen - Encuentra tu Trabajo Ideal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #F4F6F9;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #FFFFFF;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 1rem 2rem;
        }

        .navbar-brand img {
            width: 40px;
            margin-right: 0.5rem;
        }

        .navbar-brand {
            color: #1E3A8A;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .btn-profile {
            background-color: #1E3A8A;
            border: none;
            color: #FFFFFF;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
        }

            .btn-profile:hover {
                background-color: #152A66;
            }

        .btn-logout {
            background-color: #F97316;
            border: none;
            color: #FFFFFF;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
        }

            .btn-logout:hover {
                background-color: #E86100;
            }

        .btn-post-offer {
            background-color: #F97316;
            border: none;
            color: #FFFFFF;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
        }

            .btn-post-offer:hover {
                background-color: #E86100;
            }

        .btn-list-offers {
            background-color: #1E3A8A;
            border: none;
            color: #FFFFFF;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
            border-radius: 5px;
        }

            .btn-list-offers:hover {
                background-color: #152A66;
            }

        .hero-section {
            background: url('/img/hero-bg.jpg') no-repeat center center;
            background-size: cover;
            color: #FFFFFF;
            text-align: center;
            padding: 5rem 2rem;
            position: relative;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(30, 58, 138, 0.7);
            }

        .hero-content {
            position: relative;
            z-index: 1;
        }

            .hero-content h1 {
                font-size: 2.5rem;
                font-weight: bold;
                margin-bottom: 1rem;
            }

            .hero-content p {
                font-size: 1.2rem;
                margin-bottom: 2rem;
            }

        .categories-section {
            padding: 3rem 2rem;
            text-align: center;
        }

            .categories-section h2 {
                color: #1E3A8A;
                font-weight: bold;
                margin-bottom: 2rem;
            }

        .category-card {
            background-color: #FFFFFF;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
            height: 200px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

            .category-card:hover {
                transform: translateY(-5px);
            }

            .category-card img {
                width: 50px;
                margin-bottom: 1rem;
            }

            .category-card h3 {
                color: #374151;
                font-size: 1.2rem;
                margin-bottom: 0.5rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

        .jobs-section {
            padding: 3rem 2rem;
            background-color: #FFFFFF;
        }

            .jobs-section h2 {
                color: #1E3A8A;
                font-weight: bold;
                margin-bottom: 1rem;
                text-align: center;
            }

        .job-card {
            background-color: #F4F6F9;
            padding: 1.5rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 120px;
            overflow: hidden;
        }

            .job-card h3 {
                color: #374151;
                font-size: 1.2rem;
                margin-bottom: 0.5rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .job-card p {
                color: #6B7280;
                margin: 0;
                font-size: 0.9rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .job-card a.btn {
                background-color: #F97316;
                border: none;
                color: #FFFFFF;
                padding: 0.5rem 1.5rem;
                border-radius: 5px;
                font-weight: 600;
                text-decoration: none;
            }

                .job-card a.btn:hover {
                    background-color: #E86100;
                }

        .footer {
            background-color: #1E3A8A;
            color: #FFFFFF;
            padding: 2rem;
            text-align: center;
        }

            .footer a {
                color: #F97316;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <!-- Header -->
    <nav class="navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/img/logo.png" alt="Logo Workeen"> Workeen
            </a>
            <div>
                @if (Model.TipoUsuario == "E")
                {
                    <a href="/OfertaEmpleoEmpresa/NuevaOferta" class="btn btn-post-offer me-2">Publicar Oferta</a>
                }
                <a href="/Perfil/Index" class="btn btn-profile me-2">Mi Perfil</a>
                <a href="/Login/LogOut" class="btn btn-logout">Cerrar Sesión</a>
                
                
            </div>
        </div>
    </nav>

    <section class="hero-section">
        <div class="hero-content">
            @if (Model.TipoUsuario == "E")
            {
                <h1>¡Hola, @Model.Nombre! Gestiona tus Ofertas de Empleo</h1>
                <p>Publica nuevas vacantes y encuentra a los mejores candidatos en Workeen</p>
            }
            else
            {
                <h1>¡Hola, @Model.Nombre! Encuentra tu Próximo Empleo</h1>
                <div class="mt-3">
                    <a href="@Url.Action("Listar", "OfertaEmpleoPostulante")" class="btn btn-list-offers">Ver Todos los Empleos</a>
                </div>
            }
        </div>
    </section>

    <!-- Categories (Postulante) -->
    @if (Model.TipoUsuario == "P")
    {
        <section class="categories-section">
            <h2>Observa todas nuestras categorías</h2>
            <div class="container">
                <div class="row">
                    @foreach (var categoria in Model.Categorias)
                    {
                        <div class="col-md-3 col-sm-6 mb-4">
                            <div class="category-card">
                                <img src="/img/@(categoria.nombre.ToLower())-icon.png" alt="@categoria.nombre">
                                <h3>@categoria.nombre</h3>
                                <p>Explora empleos en @categoria.nombre</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    }

    <!-- Jobs -->
    <section class="jobs-section">
        @if (Model.TipoUsuario == "E")
        {
            <h2>Tus Ofertas Recientes</h2>
            <div class="text-center mb-3">
                <a href="/OfertaEmpleoEmpresa/ListarOfertas" class="btn btn-list-offers">Ver Todas las Ofertas</a>
            </div>
            <div class="container">
                @if (Model.Ofertas != null && Model.Ofertas.Any())
                {
                    foreach (var oferta in Model.Ofertas.Take(3))
                    {
                        <div class="job-card">
                            <div>
                                <h3>@oferta.titulo</h3>
                                <p>@oferta.ProvinciaNombre, @oferta.PaisNombre - @oferta.vacantes vacantes</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center">Aún no has publicado ofertas. <a href="/OfertaEmpleoEmpresa/NuevaOferta">Publica una ahora</a>.</p>
                }
            </div>
        }
        else
        {
            <h2> Empleos</h2>
            <div class="text-center mb-3">
                <a href="@Url.Action("Listar", "OfertaEmpleoPostulante")" class="btn btn-list-offers me-2">Ver Todos los Empleos</a>
                <a href="@Url.Action("VerOfertaPostulado", "OfertaEmpleoPostulante")" class="btn btn-list-offers">Ver Todas las Postulaciones</a>
            </div>
            <div class="container">
                @if (Model.Ofertas != null && Model.Ofertas.Any())
                {
                    foreach (var oferta in Model.Ofertas.Take(3))
                    {
                        <div class="job-card">
                            <div>
                                <h3>@oferta.titulo</h3>
                                <p>@oferta.EmpresaNombre - @oferta.ProvinciaNombre, @oferta.PaisNombre - @oferta.vacantes vacantes</p>
                            </div>
                            <a href="@Url.Action("VerOferta", "OfertaEmpleoPostulante", new { id_ofertaempleo = oferta.id_ofertaempleo })" class="btn btn-primary">Aplicar</a>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center">Mirá tus postulaciones y los empleos que ofrecemos</p>
                }
            </div>
        }
    </section>

    <!-- Footer -->
    <footer class="footer">
        <p>© 2025 Workeen. Todos los derechos reservados.</p>
        <p><a href="/contacto">Contacto</a> | <a href="/terminos">Términos y Condiciones</a> | <a href="/privacidad">Política de Privacidad</a></p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
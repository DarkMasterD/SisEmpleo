@model SisEmpleo.Models.Dashboard

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            background-color: #F4F6F9;
            margin: 0;
            font-family: 'Segoe UI', Arial, sans-serif;
            color: #333;
        }

        .btn-list-offers {
            background-color: #1E3A8A;
            border: none;
            color: #FFFFFF;
            padding: 0.6rem 1.8rem;
            font-weight: 600;
            border-radius: 8px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-list-offers:hover {
                background-color: #152A66;
                transform: translateY(-2px);
            }

        .hero-section {
            background: linear-gradient(135deg, rgba(30, 58, 138, 0.9), rgba(249, 115, 22, 0.7)), url('/img/hero-bg.jpg') no-repeat center center;
            background-size: cover;
            color: #FFFFFF;
            text-align: center;
            padding: 7rem 2rem;
            position: relative;
        }

        .hero-content h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1.2rem;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .hero-content p {
            font-size: 1.4rem;
            opacity: 0.9;
            margin-bottom: 2.5rem;
        }

        .categories-section {
            padding: 5rem 2rem;
            text-align: center;
            background-color: #FFFFFF;
        }

            .categories-section h2 {
                color: #1E3A8A;
                font-weight: 700;
                margin-bottom: 3rem;
                font-size: 2.5rem;
                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
            }

        .category-card {
            background-color: #FFFFFF;
            border-radius: 15px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-bottom: 2rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 240px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

            .category-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
            }

            .category-card img {
                width: 65px;
                margin-bottom: 1.2rem;
                transition: transform 0.3s ease;
            }

            .category-card:hover img {
                transform: scale(1.1);
            }

            .category-card h3 {
                color: #374151;
                font-size: 1.4rem;
                font-weight: 600;
                margin-bottom: 0.75rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .category-card p {
                color: #6B7280;
                font-size: 1.05rem;
                margin: 0;
            }

        .jobs-section {
            padding: 5rem 2rem;
            background-color: #F4F6F9;
        }

            .jobs-section h2 {
                color: #1E3A8A;
                font-weight: 700;
                margin-bottom: 2.5rem;
                text-align: center;
                font-size: 2.5rem;
                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
            }

        .job-card {
            background-color: #FFFFFF;
            border-radius: 15px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
            padding: 1.8rem;
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 140px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .job-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 28px rgba(0, 0, 0, 0.12);
            }

            .job-card h3 {
                color: #374151;
                font-size: 1.4rem;
                font-weight: 600;
                margin-bottom: 0.75rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .job-card p {
                color: #6B7280;
                font-size: 1rem;
                margin: 0;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .job-card a.btn {
                background-color: #F97316;
                border: none;
                color: #FFFFFF;
                padding: 0.6rem 1.8rem;
                font-weight: 600;
                border-radius: 8px;
                text-decoration: none;
                transition: background-color 0.3s ease, transform 0.2s ease;
            }

                .job-card a.btn:hover {
                    background-color: #E86100;
                    transform: translateY(-2px);
                }

        .no-offers {
            text-align: center;
            color: #6B7280;
            font-size: 1.2rem;
            margin-top: 1.5rem;
        }

            .no-offers a {
                color: #F97316;
                text-decoration: none;
                font-weight: 600;
            }

                .no-offers a:hover {
                    text-decoration: underline;
                    color: #E86100;
                }
    </style>
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        @if (Model.TipoUsuario == "E")
        {
            <h1>¡Hola, @Model.Nombre! Gestiona tus Ofertas de Empleo</h1>
            <p>Publica nuevas vacantes y encuentra a los mejores candidatos en Workeen</p>
        }
        else
        {
            <h1>¡Hola, @Model.Nombre! Encuentra tu Próximo Empleo</h1>
            <div class="mt-3">
                <a href="@Url.Action("Listar", "OfertaEmpleoPostulante")" class="btn btn-list-offers">Ver Todos los Empleos</a>
            </div>
        }
    </div>
</section>

<!-- Categories (Postulante) -->
@if (Model.TipoUsuario == "P")
{
    <section class="categories-section">
        <h2>Observa todas nuestras categorías</h2>
        <div class="container">
            <div class="row">
                @foreach (var categoria in Model.Categorias)
                {
                    <div class="col-md-3 col-sm-6 mb-4">
                        <div class="category-card">
                            <img src="/img/@(categoria.nombre.ToLower())-icon.png" alt="@categoria.nombre">
                            <h3>@categoria.nombre</h3>
                            <p>Explora empleos en @categoria.nombre</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Jobs -->
<section class="jobs-section">
    @if (Model.TipoUsuario == "E")
    {
        <h2>Tus Ofertas Recientes</h2>
        <div class="text-center mb-4">
            <a href="/OfertaEmpleoEmpresa/ListarOfertas" class="btn btn-list-offers">Ver Todas las Ofertas</a>
        </div>
        <div class="container">
            @if (Model.Ofertas != null && Model.Ofertas.Any())
            {
                foreach (var oferta in Model.Ofertas.Take(3))
                {
                    <div class="job-card">
                        <div>
                            <h3>@oferta.titulo</h3>
                            <p>@oferta.ProvinciaNombre, @oferta.PaisNombre - @oferta.vacantes vacantes</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="no-offers">
                    Aún no has publicado ofertas.
                    <a href="/OfertaEmpleoEmpresa/NuevaOferta">Publica una ahora</a>.
                </p>
            }
        </div>
    }
    else
    {
        <h2>Empleos</h2>
        <div class="text-center mb-4">
            <a href="@Url.Action("Listar", "OfertaEmpleoPostulante")" class="btn btn-list-offers me-2">Ver Todos los Empleos</a>
            <a href="@Url.Action("VerOfertaPostulado", "OfertaEmpleoPostulante")" class="btn btn-list-offers">Ver Todas las Postulaciones</a>
        </div>
        <div class="container">
            @if (Model.Ofertas != null && Model.Ofertas.Any())
            {
                foreach (var oferta in Model.Ofertas.Take(3))
                {
                    <div class="job-card">
                        <div>
                            <h3>@oferta.titulo</h3>
                            <p>@oferta.EmpresaNombre - @oferta.ProvinciaNombre, @oferta.PaisNombre - @oferta.vacantes vacantes</p>
                        </div>
                        <a href="@Url.Action("VerOferta", "OfertaEmpleoPostulante", new { id_ofertaempleo = oferta.id_ofertaempleo })" class="btn btn-primary">Aplicar</a>
                    </div>
                }
            }
            else
            {
                <p class="no-offers">Mirá tus postulaciones y los empleos que ofrecemos</p>
            }
        </div>
    }
</section>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            VerNoti();
        });

        setInterval(function () {
            VerNoti();
        }, 300000);

        function VerNoti() {
            $.ajax({
                url: '/Home/CantNotificaciones',
                type: 'POST',
                success: function (data) {
                    $('#Notificaciones').text(data.cantidad);
                },
                error: function () {
                    console.error("Error al obtener las notificaciones");
                    $('#Notificaciones').text('0'); // Fallback to 0 on error
                }
            });
        }
    </script>
}
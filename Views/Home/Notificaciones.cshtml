<body class="" style="background-color:azure">
    <div class="container mt-5">

        <div class="card shadow-sm p-4 rounded-4 mb-3">
            <h4 class="mb-4">🔍 Filtrar Notificaciones</h4>
            <div class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label for="cboCategoria" class="form-label">Categoría</label>
                    @Html.DropDownList("id_categoria", ViewBag.Categorias as SelectList, "Seleccione una categoría", new { @class = "form-select", id = "cboCategoria" })
                </div>
                <div class="col-md-5">
                    <label for="cboSubCategoria" class="form-label">Subcategoría</label>
                    <select id="cboSubCategoria" name="id_subcategoria" class="form-select">
                        <option value="">Seleccione una subcategoría</option>
                    </select>
                </div>
                <div class="col-md-2 text-end">
                    <button id="btnBuscar" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-gradient-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0"><i class="fas fa-bell mr-2"></i>  Notificaciones</h3>
                </div>
            </div>

            <div id="resultadoNoti" class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="pl-4">Título</th>
                                <th scope="col">Mensaje</th>
                                <th scope="col" class="text-center">Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in (IEnumerable<dynamic>)ViewBag.Ofertas)
                            {
                                    <tr class="notification-unread">
                                        <td class="pl-4 font-weight-bold">@item.Titulo</td>
                                        <td class="text-truncate" style="max-width: 250px;">Se ha implementado una nueva actualización con mejoras de rendimiento...</td>
                                        <td class="text-center text-muted">@item.Fecha.ToString("dd/MM/yyyy")</td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .notification-unread {
            background-color: #f8f9fa;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(102, 126, 234, 0.1);
        }

        .rounded-circle {
            width: 30px;
            height: 30px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</body>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#cboCategoria").change(function () {
            var categoriaId = $(this).val();
            $("#cboSubCategoria").empty().append('<option value="">Cargando...</option>');
            if (categoriaId != 0) {
                $.getJSON('/Home/ObtenerSubCategoriaSubs', { id_categoria: categoriaId }, function (data) {
                    $("#cboSubCategoria").empty().append('<option value="">Seleccione una subcategoria</option>');
                    $.each(data, function (i, item) {
                        $("#cboSubCategoria").append('<option value="' + item.id + '">' + item.subCategoria + '</option>');
                    });
                });
            } else {
                $("#cboSubCategoria").empty().append('<option value="">Seleccione una subcategoria</option>');
            }
        });

        $("#btnBuscar").click(function () {

            let idCate = $('#cboCategoria').val();
            let idSubCate = $('#cboSubCategoria').val();

            $.ajax({
                url: "/Home/NotificacionesFiltro",
                type: "GET",
                data: { id_categoria: idCate, id_subcategoria: idSubCate },
                success: function (response) {
                    $("#resultadoNoti").html("");
                    $("#resultadoNoti").html(response);
                },
                error: function () {
                    alert("Error");
                }
            });
        });
    });
</script>
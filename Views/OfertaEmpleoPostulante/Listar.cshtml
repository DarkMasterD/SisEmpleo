@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Workeen - Lista de Ofertas de Empleo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #F4F6F9;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #FFFFFF;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 1rem 2rem;
        }

        .navbar-brand img {
            width: 40px;
            margin-right: 0.5rem;
        }

        .navbar-brand {
            color: #1E3A8A;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .btn-profile {
            background-color: #1E3A8A;
            border: none;
            color: #FFFFFF;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
        }

            .btn-profile:hover {
                background-color: #152A66;
            }

        .btn-logout {
            background-color: #F97316;
            border: none;
            color: #FFFFFF;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
        }

            .btn-logout:hover {
                background-color: #E86100;
            }

        .jobs-section {
            padding: 3rem 2rem;
            background-color: #FFFFFF;
        }

            .jobs-section h2 {
                color: #1E3A8A;
                font-weight: bold;
                margin-bottom: 2rem;
                text-align: center;
            }

        .job-card {
            background-color: #F4F6F9;
            padding: 1.5rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: transform 0.2s;
        }

            .job-card:hover {
                transform: translateY(-5px);
            }

            .job-card h3 {
                color: #374151;
                font-size: 1.2rem;
                margin-bottom: 0.5rem;
            }

            .job-card p {
                color: #6B7280;
                margin: 0;
            }

            .job-card a {
                background-color: #F97316;
                border: none;
                color: #FFFFFF;
                padding: 0.5rem 1.5rem;
                border-radius: 5px;
                font-weight: 600;
                text-decoration: none;
            }

                .job-card a:hover {
                    background-color: #E86100;
                }

        .footer {
            background-color: #1E3A8A;
            color: #FFFFFF;
            padding: 2rem;
            text-align: center;
        }

            .footer a {
                color: #F97316;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <!-- Header -->
    <nav class="navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/img/logo.png" alt="Logo Workeen"> Workeen
            </a>
            <div>
                <a href="/Perfil" class="btn btn-profile me-2">Mi Perfil</a>
                <a href="/Login/LogOut" class="btn btn-logout">Cerrar Sesión</a>
            </div>
        </div>
    </nav>

    <!-- Lista de Ofertas -->
    <section class="jobs-section">
        <h2>Todas las Ofertas de Empleo</h2>
        <div class="container">
            @if (ViewBag.ofertas != null && ((IEnumerable<dynamic>)ViewBag.ofertas).Any())
            {
                foreach (var oferta in (IEnumerable<dynamic>)ViewBag.ofertas)
                {
                    <div class="job-card">
                        <div>
                            <h3>
                                <a href="@Url.Action("VerOferta", "OfertaEmpleoPostulante", new { id_ofertaempleo = oferta.Id })" style="text-decoration: none; color: #374151;">
                                    @oferta.Titulo
                                </a>
                            </h3>
                            <p>@oferta.Nombre_Empresa - @oferta.Ubi_Pro, @oferta.Ubi_Pais - @oferta.Vacantes vacante(s)</p>
                            <p>Salario: @oferta.Salario | Duración: @oferta.Duracion_Contrato | Publicado: @oferta.Fecha_Publicacion</p>
                        </div>
                        <a href="@Url.Action("VerOferta", "OfertaEmpleoPostulante", new { id_ofertaempleo = oferta.Id })">Ver Detalles</a>
                    </div>
                }
            }
            else
            {
                <p class="text-center">No hay ofertas disponibles en este momento. Suscríbete a más categorías para ver más opciones.</p>
            }
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <p>© 2025 Workeen. Todos los derechos reservados.</p>
        <p><a href="/contacto">Contacto</a> | <a href="/terminos">Términos y Condiciones</a> | <a href="/privacidad">Política de Privacidad</a></p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@model SisEmpleo.Models.Viewmodels.EmpresaViewModel

@if (Model == null)
{
    <div class="alert alert-warning">No hay datos de la empresa para mostrar.</div>
}
else
{
    <div class="card shadow mb-4">
        <div class="card-header bg-success text-white">
            <h2>@Model.Nombre</h2>
        </div>
        <div class="card-body">
            <p><strong>Correo Electrónico:</strong> @Model.Email</p>
            <p><strong>Dirección:</strong> @Model.Direccion</p>
            <p><strong>Descripción de su Área de Trabajo:</strong> @Model.Descripcion</p>
            <p><strong>Sector de Trabajo:</strong> @Model.Sector</p>
        </div>
    </div>
}

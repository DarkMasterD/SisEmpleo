@model SisEmpleo.Models.Viewmodels.EmpresaViewModel

@if (Model == null)
{
    <div class="alert alert-warning text-center py-4 fs-5">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        No hay datos de la empresa para mostrar.
    </div>
}
else
{
<div class="container my-5">
    <div class="card shadow-lg rounded-4 overflow-hidden border-0">
        <div class="row g-0">
            <!-- "Logo" ;) de la empresa -->
            <div class="col-md-4 bg-light d-flex align-items-center justify-content-center p-5">
                <img src="https://ui-avatars.com/api/?name=@Model.Nombre&background=0D8ABC&color=fff&size=256&rounded=true"
                     alt="Logo de la empresa" class="rounded-circle shadow" width="180" height="180">
            </div>

            <!-- Información de la empresa -->
            <div class="col-md-8">
                <div class="card-body p-5">
                    <h1 class="card-title fw-bold text-primary mb-1">@Model.Nombre</h1>
                    <p class="text-muted fst-italic mb-4">Perfil de empresa</p>

                    <div class="mb-4">
                        <h5 class="fw-semibold text-dark mb-2">
                            <i class="bi bi-envelope-fill me-2 text-primary"></i>Correo Electrónico
                        </h5>
                        <p class="fs-5">@Model.Email</p>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-semibold text-dark mb-2">
                            <i class="bi bi-geo-alt-fill me-2 text-primary"></i>Dirección
                        </h5>
                        <p class="fs-5">
                            @Html.Raw(string.IsNullOrWhiteSpace(Model.Direccion)
                                                        ? "<span class='text-muted fst-italic'>No especificada</span>"
                                                        : Model.Direccion)
                        </p>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-semibold text-dark mb-2">
                            <i class="bi bi-building me-2 text-primary"></i>Sector de Trabajo
                        </h5>
                        <p class="fs-5">
                            @Html.Raw(string.IsNullOrWhiteSpace(Model.Sector)
                                                        ? "<span class='text-muted fst-italic'>No especificado</span>"
                                                        : Model.Sector)
                        </p>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-semibold text-dark mb-2">
                            <i class="bi bi-info-circle-fill me-2 text-primary"></i>Descripción
                        </h5>
                        <p class="fs-5">
                            @Html.Raw(string.IsNullOrWhiteSpace(Model.Descripcion)
                                                        ? "<span class='text-muted fst-italic'>No especificada</span>"
                                                        : Model.Descripcion)
                        </p>
                    </div>

                    <div class="d-flex flex-wrap gap-3 mt-4">
                        <a href="@Url.Action("EditarEmpresa", "Perfil")" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-pencil-square me-2"></i>Editar Perfil
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg shadow-sm">
                            <i class="bi bi-arrow-left-circle me-2"></i>Volver al Inicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

@model SisEmpleo.Models.Viewmodels.EditarPerfilViewModel

<h2>Editar Perfil</h2>

<form asp-action="EditarPerfil" method="post">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Apellidos"></label>
            <input asp-for="Apellidos" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="PaisId"></label>
            <select asp-for="PaisId" asp-items="Model.Paises" class="form-control"></select>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="ProvinciaId"></label>
            <select asp-for="ProvinciaId" asp-items="Model.Provincias" class="form-control"></select>
        </div>
    </div>

    <div class="form-group">
        <label>Idiomas</label>
        <select asp-for="IdiomaIds" asp-items="Model.IdiomasDisponibles" multiple="multiple" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Habilidades</label>
        <select asp-for="HabilidadIds" class="form-control" multiple="multiple">
            @foreach (var habilidad in Model.HabilidadesDisponibles)
            {
                <option value="@habilidad.id_habilidad" selected="@Model.HabilidadIds.Contains(habilidad.id_habilidad)">
                    @habilidad.nombre
                </option>
            }
        </select>
    </div>

    <!-- Aquí puedes agregar secciones para NuevaFormacion, NuevaExperiencia y NuevaCertificacion -->

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

}

<div class="container mt-4">
    <h2 class="mb-4">Perfil de @Model.Nombres @Model.Apellidos</h2>

    <div class="card mb-4">
        <div class="card-header">
            Información Personal
        </div>
        <div class="card-body">
            <p><strong>Correo:</strong> @Model.Email</p>
            <p><strong>Teléfono:</strong> @Model.Telefono</p>
            <p><strong>Fecha de nacimiento:</strong> @(Model.FechaNacimiento?.ToShortDateString() ?? "No especificada")</p>
            <p><strong>País:</strong> @Model.Pais</p>
            <p><strong>Provincia:</strong> @Model.Provincia</p>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            Idiomas
        </div>
        <div class="card-body">
            @if (ViewBag.Idioma != null && ((List<string>)ViewBag.Idioma).Any())
            {
                <ul>
                    @foreach (var idioma in (List<string>)ViewBag.Idioma)
                    {
                        <li>@idioma</li>
                    }
                </ul>
            }
            else
            {
                <p>No hay idiomas registrados.</p>
            }
        </div>
    </div>


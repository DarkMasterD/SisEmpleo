@{
}

<form method="post">
    <div class="form-group">
        <label>Correo electronico: </label>
        @Html.TextBox("email", "", new { @class = "form-control" })
    </div>
    <div>
        <label>Contraseña: </label>
        @Html.Password("contrasenia", "", new { @class = "form-control" })
    </div>
    <div>
        <label>Empresa: </label>
        @Html.TextBox("nombre", "", new { @class = "form-control" })
    </div>
    <div>
        <label>Direccion: </label>
        @Html.TextBox("direccion", "", new { @class = "form-control" })
    </div>
    <div>
        <label>Descripcion de su area de trabajo: </label>
        @Html.TextBox("descripcion_empresa", "", new { @class = "form-control" })
    </div>
    <div>
        <label>Sector de trabajo: </label>
        @Html.TextBox("sector_empresa", "", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Registrarse</button>
</form>

@{
}

<div>
    @foreach (var oferta in (IEnumerable<dynamic>)ViewData["listOfertas"])
    {
        <label>@oferta.Titulo</label>
        <label>@oferta.Vacantes</label>
        <label>@oferta.Salario</label>
        <label>@oferta.Duracion_Contrato</label>
        <label>@oferta.Fecha_Publicacion</label>
        <label>@oferta.Ubi_Pais</label>
        <label>@oferta.Ubi_Pro</label>
        <label>@oferta.Id</label>
        <form asp-action="EditarOferta" method="get">
            <input type="hidden" name="id_ofertaempleo" value=@oferta.Id />
            <button type="submit" class="btn btn-primary">Editar</button>
        </form>
        <form asp-action="CategoriaOferta" method="get">
            <button type="submit" class="btn btn-primary">Categoria</button>
        </form>
    }
</div>

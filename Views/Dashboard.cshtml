<script>
    function loadGraph(graphNumber) {
      // Aquí implementarías la lógica para cargar el gráfico seleccionado
      console.log(`Cargando gráfico número ${graphNumber}`);

      // Ejemplo de cómo podrías manejar esto:
      const graphDisplay = document.getElementById('graphDisplay');
      graphDisplay.innerHTML = `
        <div class="graph-header">
          <h3>${getGraphTitle(graphNumber)}</h3>
        </div>
        <div class="graph-content">
          <!-- Aquí iría el gráfico renderizado -->
          <img src="https://via.placeholder.com/800x400?text=Gráfico+${graphNumber}"
               alt="Gráfico ${graphNumber}"
               style="width: 100%; border-radius: 5px;">
        </div>
      `;
    }

    function getGraphTitle(number) {
      const titles = [
        "",
        "Distribución de Vacantes por Empresa",
        "Número de Inscripciones por Oferta",
        "Distribución de Candidatos por Formación Académica",
        "Porcentaje de Candidatos Suscritos por Categoría de Trabajo",
        "Relación entre Salario y Número de Vacantes",
        "Número de ofertas de trabajo por empresa",
        "Número de ofertas en determinadas fechas",
        "Distribución de ofertas por países"
      ];
      return titles[number];
    }
</script>